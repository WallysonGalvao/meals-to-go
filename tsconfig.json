{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "components": ["./src/components"],
      "features": ["./src/features"],
      "infrastructure": ["./src/infrastructure"],
      "services": ["./src/services"],
      "utils": ["./src/utils"]
    }
  }
}
